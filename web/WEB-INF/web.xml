<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>查询全部学生</servlet-name>
        <servlet-class>blog.monako.student.StudentListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>查询全部学生</servlet-name>
        <url-pattern>/StudentListServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>添加学生</servlet-name>
        <servlet-class>blog.monako.student.StudentAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>添加学生</servlet-name>
        <url-pattern>/StudentAddServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>删除学生</servlet-name>
        <servlet-class>blog.monako.student.StudentDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>删除学生</servlet-name>
        <url-pattern>/StudentDeleteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>修改学生信息</servlet-name>
        <servlet-class>blog.monako.student.StudentEditServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>修改学生信息</servlet-name>
        <url-pattern>/StudentEditServelet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>查询单个学生信息</servlet-name>
        <servlet-class>blog.monako.student.StudentUserInfoServelet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>查询单个学生信息</servlet-name>
        <url-pattern>/StudentUserInfoServelet</url-pattern>
    </servlet-mapping>
</web-app>